<h1>Posts</h1>

<div id="posts">
    {{#each posts}}
    <h2><a href="/posts/{{this.id}}">{{this.title}}</a></h2>
    <div>{{body}}</div>
    {{/each}}
</div>

<form action='#' id='post-form'>
    <textarea name="body" class="form-control"></textarea>
    <div class='text-right'>
        <button type='submit'>Save</button>
    </div>
</form>